@model OgrenciNotMvc.Models.EntityFramework.TBLKULUPLER

@{
    ViewBag.Title = "KulupGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kulup", FormMethod.Post)) //formmethod post olduğunda guncelle methodu çalışacak
{
    <div class="form-group">
        @Html.LabelFor(m => m.KULUPAD)
        @Html.TextBoxFor(m => m.KULUPAD, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.KULUPID)
    <div style="margin-top:15px">
        <button class="btn btn-info">Güncelle</button>
    </div>

}
